
@{
    ViewData["Title"] = "PerfilUsuario";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h2>Perfil do usuario</h2>
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="title">Editar perfil</h5>
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="row">
                                        <div class="col-md-5 pr-md-1">
                                            <div class="form-group">
                                                <label>Instituição</label>
                                                <input type="text" class="form-control" disabled="" placeholder="Company" value="Fametro.">
                                            </div>
                                        </div>
                                        <div class="col-md-3 px-md-1">
                                            <div class="form-group">
                                                <label>ID - Matricula</label>
                                                <input type="text" class="form-control" placeholder="Matricula" value="{{Usuario.matricula}}">
                                            </div>
                                        </div>
                                        <div class="col-md-4 pl-md-1">
                                            <div class="form-group">
                                                <label>Endereço de Email </label>
                                                <input type="text" class="form-control" placeholder="professor@email.com" value="{{Usuario.email}}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-md-1">
                                            <div class="form-group">
                                                <label>Primeiro Nome</label>
                                                <input type="text" class="form-control" placeholder="nome" value="{{Usuario.nome}}">
                                            </div>
                                        </div>
                                        <div class="col-md-6 pl-md-1">
                                            <div class="form-group">
                                                <label>ultimo Nome</label>
                                                <input type="text" class="form-control" placeholder="ultimo nome" value="{{Usuario.sobrenome}}">
                                            </div>
                                        </div>

                                        <div class="col-md-6 pl-md-1">
                                            <div class="form-group">
                                                <label> Senha</label>
                                                <input type="text" class="form-control" placeholder="Sua senha" value="{{Login.password}}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label>Informações</label>
                                                <textarea rows="4" cols="80" class="form-control" placeholder="" value="Mike">Forneça todos seus dados corretamente nos campos acima.</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="BtnCadastra" class="col-md-6">
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                            Salvar edição
                                        </button>
                                    </div>
                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Perfil de UsuᲩo</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Quase tudo Pronto! para salvar as aterações preenchidas Clique em "Confirmar".

                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                                    <button type="submit" class="btn btn-primary">Confirmar </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


