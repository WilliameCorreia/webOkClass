@model IEnumerable<SalaDeAula>
<!-- End Navbar -->
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 style="color: #3ebbec; font-size: 16px" class="title"> FAMETRO - GUILHERME ROCHA @DateTime.Now.ToString("HH:mm:ss")</h5>
                    <P>Catálogo de Salas - [Escolha abaixo na qual deseja utilizar]</P>
                </div>

                <div class="card-body all-icons">
                    <div class="row">
                        @{var cor = ""; }

                        @foreach (var item in Model)
                        {
                            @switch (item.StatusDaSala)
                            {
                                case 1:
                                    cor = "cor1";
                                    break;
                                case 2:
                                    cor = "cor2";
                                    break;
                                case 3:
                                    cor = "cor3";
                                    break;
                                case 4:
                                    cor = "cor4";
                                    break;
                            }
                            <div class="font-icon-list col-lg-2 col-md-3 col-sm-4 col-xs-6 col-xs-6">
                                <div class="dropdown">
                                    <button type="button" class="btn btn-link dropdown-toggle btn-icon" data-toggle="dropdown">
                                        <i class="tim-icons icon-settings-gear-63"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                        <button value="1" id="@item.SalaDeAulaId" class="dropdown-item status">Entrar nesta Sala</button>
                                        <button value="3" id="@item.SalaDeAulaId" class="dropdown-item status">Fechar esta Sala</button>
                                        <button value="2" id="@item.SalaDeAulaId" class="dropdown-item status">Reservar esta Sala</button>
                                        <button value="4" id="@item.SalaDeAulaId" class="dropdown-item status">Limpar Sala</button>
                                    </div>
                                </div>
                                <div class="font-icon-detail @cor">
                                    <img src="~/images/icons/81419d8a9c.png" />
                                    <P><H2>SALA @item.NumeroDaSala</H2></P>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="~/assets/js/core/jquery.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>
    <script src="~/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!--  Google Maps Plugin    -->
    <!-- Place this tag in your head or just before your close body tag. -->
    @*<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>*@
    <!-- Chart JS -->
    <script src="~/assets/js/plugins/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/assets/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Black Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/assets/js/black-dashboard.min.js?v=1.0.0"></script>
    <!-- Black Dashboard DEMO methods, don't include it in your project! -->
    <script src="~/assets/demo/demo.js"></script>
    <script src="~/Js/ScriptLayout.js"></script>
    <script src="~/Js/ScriptPaginaPrincipal.js"></script>
    @RenderSection("scripts", required: false)
}

